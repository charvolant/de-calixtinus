[Unit]
Description=De Calixtinus Camino Planner
Documentation=https://github.com/charvolant/de-calixtinus
After=nginx.service
Wants=nginx.service

[Service]
Type=simple
User={{ dcx_user }}
Group={{ dcx_group }}
StandardOutput=append:{{ dcx_log_dir }}/access.log
StandardError=append:{{ dcx_log_dir }}/error.log
RuntimeDirectory={{ dcx_run_dir }}
WorkingDirectory=/run/{{ dcx_run_dir }}
ExecStart={{ dcx_dir}}/bin/camino-server-exe -c {{ dcx_dir}}/lib/config.yaml -s {{ dcx_dir}}/lib/static -r https://{{ server_name }} -p 3000 {{ dcx_dir}}/lib/camino-frances.json {{ dcx_dir}}/lib/camino-portuguese.json {{ dcx_dir}}/lib/camino-fisterra.json {{ dcx_dir}}/lib/camino-ingles.json +RTS -M{{ dcx_maximum_heap_size }}
Restart=no

[Install]
WantedBy=multi-user.target